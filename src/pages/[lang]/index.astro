---
// Import necessary components and utilities
import Formalizer from "@/components/Formalizer"; // Assuming this is used elsewhere or can be removed if not needed on this page
import { SITE_TITLE, SITE_TITLE_SHORT } from "@/consts";
import Image from "astro/components/Image.astro"; // Currently unused, keep if planning to add images
import { DEFAULT_LOCALE, LOCALES, useTranslations, type Lang } from "@/i18n";
import Layout from "@/layouts/Base.astro";
import { Icon } from "astro-icon/components";

const locale = Astro.currentLocale as Lang;
const t = useTranslations(locale);

// Generate static paths for locales
export const getStaticPaths = () =>
  Object.keys(LOCALES).map((lang) => ({ params: { lang } }));

const currentLocale = locale as Lang;

const canonical =
  currentLocale === DEFAULT_LOCALE
    ? (Astro.site?.toString() ?? "")
    : (Astro.url?.toString() ?? "");

// Helper function for cleaner translation calls
const translate = (key: Parameters<typeof t>[0]) => t(key);
---

<Layout
  canonical={canonical}
  title={translate({
    en: `Home - ${SITE_TITLE_SHORT}`,
    es: `Inicio - ${SITE_TITLE_SHORT}`,
    ar: `الصفحة الرئيسية - ${SITE_TITLE_SHORT}`,
    pt: `Início - ${SITE_TITLE_SHORT}`,
    fr: `Accueil - ${SITE_TITLE_SHORT}`,
    ru: `Главная - ${SITE_TITLE_SHORT}`,
    "zh-cn": `首页 - ${SITE_TITLE_SHORT}`,
    ja: `ホーム - ${SITE_TITLE_SHORT}`,
